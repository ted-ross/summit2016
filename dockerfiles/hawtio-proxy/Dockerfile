FROM fedora:23
MAINTAINER Ted Ross <tross@apache.org>
RUN dnf -y update
RUN dnf -y install python-websockify
EXPOSE 5673
CMD websockify 5673 ${MESSAGING_SERVICE_HOST}:${MESSAGING_SERVICE_PORT}
